<UserControl x:Class="Teststyle.ttt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:res="clr-namespace:Teststyle"
             xmlns:local="clr-namespace:Teststyle"
              xmlns:conver="clr-namespace:Teststyle.Conver"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <conver:stringConver x:Key="str2"></conver:stringConver>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <ComboBox Style="{StaticResource  stlComboBox}"  Width="130" Height="50">
            <ComboBoxItem >
                <TextBlock Text="{Binding Name,Converter={StaticResource str2}}"></TextBlock>
            </ComboBoxItem>
        </ComboBox>
    </Grid>
</UserControl>

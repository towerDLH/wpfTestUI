<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        xmlns:u="clr-namespace:UI;assembly=UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grd">
        <StackPanel>

            <u:TextBoxEx Width="100" Height="100" XRegExp="^[0-9]*$" XWmkText="姓名" Text="{Binding number,Mode=TwoWay}"></u:TextBoxEx>
            <u:TextBoxEx Width="100" Height="100" XRegExp="^[0-9]+(.[0-9]{2})?$" XWmkText="AS" Text="{Binding number,Mode=TwoWay}"></u:TextBoxEx>
            <u:TextBoxEx Width="100" Height="100" XRegExp="^[\u4e00-\u9fa5]{0,}$" XWmkText="BG" Text="{Binding Text,Mode=TwoWay}"></u:TextBoxEx>
            <u:TextBoxEx Width="100" Height="100" XRegExp="^[\u4e00-\u9fa5]{0,}$" XWmkText="姓名" Text="{Binding number,Mode=TwoWay}"> </u:TextBoxEx>
        </StackPanel>
        <Button Width="100" Height="20" Margin="467,201,225,198" Click="Button_Click" ></Button>
    </Grid>
</Window>

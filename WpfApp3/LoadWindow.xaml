<Window x:Class="WpfApp3.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="LoadWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="用户名"></Label>
                <TextBox Width="100" x:Name="UserName"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="密码"></Label>
                <TextBox Width="100" x:Name="UserPwd"></TextBox>
            </StackPanel>
            <CheckBox HorizontalAlignment="Left" Content="记住密码" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" x:Name="checkBoxXUser"></CheckBox>
            <StackPanel Orientation="Horizontal">
                <Button Content="登录"></Button>
                <Button Content="取消"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

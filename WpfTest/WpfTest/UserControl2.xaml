<UserControl x:Class="WpfTest.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTest"
             mc:Ignorable="d" 
             x:Name="base_"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type ContentControl}"  >
            <Setter  Property="Template"  >
                <Setter.Value>
                    <ControlTemplate   TargetType="{x:Type ContentControl}" >
                        <Grid x:Name="AA">
                            <Border BorderBrush="#999999" BorderThickness="1" CornerRadius="12" Margin="15"  Panel.ZIndex="3" >
                            </Border>
                            <TextBlock HorizontalAlignment="Left" Margin="35,0,0,0" TextWrapping="Wrap" Text="{Binding ElementName=base_,Path=contenttext}"  FontSize="22" Background="White"  VerticalAlignment="Top" Panel.ZIndex="10"/>
                            <Grid x:Name="asa"></Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <ContentControl   >
        
    </ContentControl>
</UserControl>

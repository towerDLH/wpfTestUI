                    <TextBlock  >
                <Run>工序模式:</Run>
                 <Run Text="{Binding BindingGroupName}"> </Run>
                    </TextBlock>
                    <TextBlock  >

                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Window.Resources>

<UserControl   x:Class="UI.MoveThumb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas >
        <Canvas.Resources>
            <ControlTemplate x:Key="rec">
                <Grid>
                    <Ellipse Width="50" Height="50"  Fill="OrangeRed" IsHitTestVisible="False" ></Ellipse>
                    <!--<TextBlock Text="开始"   Block.TextAlignment="Center"       />-->
                    <Label Content="开始"  VerticalContentAlignment="Center"   HorizontalContentAlignment="Center"></Label>
                    <!--<Rectangle Fill="Red"   ></Rectangle>-->
                    <TextBlock Text="连接"   VerticalAlignment="Bottom" HorizontalAlignment="Center" PreviewMouseLeftButtonDown="TextBlock_PreviewMouseLeftButtonDown"></TextBlock>
                </Grid>
            </ControlTemplate>
        </Canvas.Resources>
        <Thumb  Width="50" Height="50"  Canvas.Top="1" Canvas.Left="1"  Template="{StaticResource rec}"  DragDelta="Thumb_DragDelta"     >

        </Thumb>
    </Canvas>
</UserControl>
